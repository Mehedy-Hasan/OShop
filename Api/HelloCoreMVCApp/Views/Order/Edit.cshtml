@model HelloCoreMVCApp.Models.Order.OrderViewModel

@{
    ViewData["Title"] = "Edit";
}
<br/>
<div class="container body-content">
    <div class="panel panel-primary" style="margin-bottom: 5px;">
        <div class="panel-heading">
            Order Create
        </div>
        <div class="panel-body">
            <form asp-controller="Order" asp-action="Edit" method="post">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-6">
                            <label asp-for="CustomerId" class="control-label col-md-4">Customer</label>
                            <div class="col-md-8">
                                <select disabled="disabled" asp-for="CustomerId" asp-items="@Model.Customers" class="form-control col-md-8"></select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <label asp-for="OrderNo" class="control-label col-md-4"></label>
                            <div class="col-md-8">
                                <input type="text" asp-for="OrderNo" readonly="readonly" class="form-control col-md-8" />
                                <span asp-validation-for="OrderNo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="OrderDate" class="control-label col-md-4">Order Date</label>
                            <div class="col-md-8">
                                <input asp-for="OrderDate" readonly="readonly" class="form-control col-md-8" />
                                <span asp-validation-for="OrderDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr/>

                    <div class="row">
                        <input type="hidden" id="orderId" asp-for="Id" />
                        <div class="form-group">
                            <div class="col-md-6">
                                <label for="ProductId" class="control-label col-md-4">Product</label>
                                <div class="col-md-8">
                                    <select id="ProductId" name="ProductId" asp-items="@Model.ProductSelectItems" class="form-control">
                                        <option>Select...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="qty" class="control-label col-md-4">Qty</label>
                                <div class="col-md-8">
                                    <input type="number" id="qty" class="form-control" />
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label for="unitPrice" class="control-label col-md-4">Unit Price</label>
                                <div class="col-md-8">
                                    <input type="number" id="unitPrice" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="discountPercent" class="control-label col-md-4">discountPercent</label>
                                <div class="col-md-8">
                                    <input type="number" id="discountPercent" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="text-center">
                                <input type="button" id="btnAdd" value="Add" class="btn btn-success" />
                            </div>

                        </div>
                    </div>

                        

                    </div>
                </div>
            </form>
        </div>

    <div class="row container">
            <div class="panel panel-primary marksCheckerMainDiv" style="margin-bottom: 5px;">
                <div class="panel-heading">
                    Order Detail
                </div>
                <div class="row container">
                    <form>
                        <div class="panel-body">
                            <input type="hidden" id="dtlRowHiden" />
                            <input type="hidden" id="dtlIdHiden" value="0" />
                            <table id="dtlTable" class="table table-striped table-bordered table-hover table-responsive">
                                <thead>
                                    <tr>
                                        <th>rowNumber</th>
                                        <th>DtlId</th>
                                        <th>ProductId</th>
                                        <th>Product</th>
                                        <th>Qty</th>
                                        <th>Unit Price</th>
                                        <th>Discount Percent</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody id="tbOrderDetails"></tbody>
                            </table>
                        </div>

                        <div class="form-group">
                            <div class="text-center">
                                <input id="btnSubmit" type="button" value="Submit" class="btn btn-primary" />
                            </div>
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>




    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    @section Scripts{

        <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
        <script src="~/Scripts/AppScripts/Order/order-edit.js"></script>
    }

